<div class="interactive-section">
    <div class="map" style="flex: 1; margin-right: 20px;">
        <iframe width="100%"
                height="300"
                style="border: 0;"
                loading="lazy"
                allowfullscreen
                referrerpolicy="no-referrer-when-downgrade"
                src="@MapSrc">
        </iframe>
    </div>
    <div class="map-info" style="flex: 1; display: flex; flex-direction: column; justify-content: center;">
        <h2>@Name</h2>
        <p><strong>Alamat:</strong> @Address</p>
        <p><strong>No. Telepon:</strong> @Phone</p>
    </div>
</div>


@code {
    [Parameter] 
    public string MapSrc { get; set; } = "";
    [Parameter] 
    public string Name { get; set; } = "Default Name";
    [Parameter] 
    public string Address { get; set; } = "Default Address";
    [Parameter] 
    public string Phone { get; set; } = "Default Phone";
}